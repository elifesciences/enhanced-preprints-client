{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "includes": [
      "src/**",
      "browser-tests/**",
      "wiremock/**",
      "**/*.scss",
      "!.next",
      "!node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 240
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": {
          "level": "error",
          "options": {
            "style": "inlineType"
          }
        }
      }
    }
  }
}
