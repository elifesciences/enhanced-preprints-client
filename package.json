{
  "name": "enhanced-preprints-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "crc-32": "^1.2.2",
    "next": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sass": "^1.54.5",
    "web-vitals": "^3.0.0",
    "yargs": "^17.6.2"
  },
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "test": "react-scripts test",
    "lint": "eslint --ext .tsx,.ts,.json src/ browser-tests/ ./manuscripts.json",
    "lint:fix": "eslint --fix --ext .tsx,.ts src/ browser-tests/",
    "lint-sass": "stylelint **/*.scss",
    "lint-sass:fix": "stylelint --fix **/*.scss",
    "storybook": "storybook dev -p 6006 -s public",
    "build-storybook": "storybook build -s public",
    "test:browser": "playwright test",
    "publish-manuscript": "ts-node src/scripts/cliPublishManuscript.ts",
    "publish-manuscript-no-input": "echo -n '' | ts-node src/scripts/cliPublishManuscript.ts",
    "add-pdf-url-to-manuscript": "ts-node src/scripts/addPdfUrlToManuscript.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@playwright/test": "^1.29.2",
    "@storybook/addon-a11y": "^7.0.6",
    "@storybook/addon-actions": "^7.0.6",
    "@storybook/addon-essentials": "^7.0.6",
    "@storybook/addon-interactions": "^7.0.6",
    "@storybook/addon-links": "^7.0.6",
    "@storybook/cli": "^7.0.6",
    "@storybook/nextjs": "^7.0.6",
    "@storybook/node-logger": "^7.0.6",
    "@storybook/react": "^7.0.6",
    "@storybook/testing-library": "^0.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "babel-plugin-named-exports-order": "^0.0.2",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-storybook": "^0.6.11",
    "fetch-mock": "^9.11.0",
    "jest": "^29.5.0",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.6",
    "storybook-dark-mode": "^3.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard-scss": "^6.0.0",
    "stylelint-order": "^6.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "webpack": "^5.74.0"
  }
}
